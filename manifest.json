{
  "manifest_version": 3,
  "name": "Chrome AI Summarizer",
  "description": "Summarize selected text using Chrome's built-in AI",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}